---
import type { ComponentDataDisplayEventInfo } from "@/generated/graphql";
import Countdown from "./Countdown.astro";

type Props = ComponentDataDisplayEventInfo;

const { startDate, endDate, location, price, buttonUrl, buttonLabel } =
  Astro.props;
---

<section
  class="lg:py-xl bg-[#fffffe] px-5 py-6 sm:py-12 lg:rounded-lg md:mt-[-40px] w-full flex-grow mx-auto lg:max-w-7xl border-solid border-1 border-gray-200 z-10"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="md:flex md:items-center md:justify-between md:space-x-16">
      <div class="max-w-lg xl:max-w-2xl">
        <Countdown target={startDate} />
      </div><div
        class="mt-12 flex flex-grow items-center space-x-4 sm:space-x-8 md:mt-0 lg:space-x-16"
      >
        <div>
          <svg
            class="h-auto w-4 text-black"
            viewBox="0 0 16 81"
            fill="none"
            stroke="currentColor"
            xmlns="http://www.w3.org/2000/svg"
            ><line
              y1="-0.5"
              x2="18.0278"
              y2="-0.5"
              transform="matrix(0.83205 0.5547 0.5547 -0.83205 1 56)"
            ></line><line
              y1="-0.5"
              x2="18.0278"
              y2="-0.5"
              transform="matrix(0.83205 0.5547 0.5547 -0.83205 1 21)"
            ></line><line
              y1="-0.5"
              x2="18.0278"
              y2="-0.5"
              transform="matrix(0.83205 0.5547 0.5547 -0.83205 1 49)"
            ></line><line
              y1="-0.5"
              x2="18.0278"
              y2="-0.5"
              transform="matrix(0.83205 0.5547 0.5547 -0.83205 1 14)"
            ></line><line
              y1="-0.5"
              x2="18.0278"
              y2="-0.5"
              transform="matrix(0.83205 0.5547 0.5547 -0.83205 1 42)"
            ></line><line
              y1="-0.5"
              x2="18.0278"
              y2="-0.5"
              transform="matrix(0.83205 0.5547 0.5547 -0.83205 1 7)"
            ></line><line
              y1="-0.5"
              x2="18.0278"
              y2="-0.5"
              transform="matrix(0.83205 0.5547 0.5547 -0.83205 1 70)"
            ></line><line
              y1="-0.5"
              x2="18.0278"
              y2="-0.5"
              transform="matrix(0.83205 0.5547 0.5547 -0.83205 1 35)"
            ></line><line
              y1="-0.5"
              x2="18.0278"
              y2="-0.5"
              transform="matrix(0.83205 0.5547 0.5547 -0.83205 1 0)"
            ></line><line
              y1="-0.5"
              x2="18.0278"
              y2="-0.5"
              transform="matrix(0.83205 0.5547 0.5547 -0.83205 1 63)"
            ></line><line
              y1="-0.5"
              x2="18.0278"
              y2="-0.5"
              transform="matrix(0.83205 0.5547 0.5547 -0.83205 1 28)"
            ></line></svg
          >
        </div>
        <div class="flex gap-2 flex-col">
          <div
            class="font-pj text-base font-normal text-gray-800 lg:text-xl flex flex-row"
          >
            <p>üïò &nbsp;</p>
            <div>
              <p class="capitalize">
                {
                  new Date(startDate).toLocaleDateString("nl-BE", {
                    weekday: "long",
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })
                } - {
                  new Date(endDate).toLocaleDateString("nl-BE", {
                    weekday: "long",
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })
                }
              </p>
              <p>
                {new Date(startDate).toLocaleTimeString("nl-BE")} - {
                  new Date(endDate).toLocaleTimeString("nl-BE")
                }
              </p>
            </div>
          </div>
          <p class="font-pj text-base font-normal text-gray-800 lg:text-xl">
            üìç {location}
          </p>
          {
            price && (
              <p class="font-pj text-base font-normal text-gray-800 lg:text-xl">
                ü™ô {price}
              </p>
            )
          }
          <p class="font-pj text-base font-normal text-gray-800 lg:text-xl">
            üöò <span class="underline">Free parking!</span>
          </p>
          {
            buttonLabel && buttonUrl ? (
              <a
                slot="cta-button"
                href={buttonUrl}
                target="_blank"
                class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded self-start mt-2"
              >
                {buttonLabel}
              </a>
            ) : null
          }
        </div>
      </div>
    </div>
  </div>
</section>
