---
import "@/styles/global.css";

import BaseHead from "@/components/BaseHead.astro";
import type { ComponentProps } from "astro/types";

type Props = ComponentProps<typeof BaseHead> & {
  style?: string;
  class?: string;
};

const { style, class: className, ...baseHeadProps } = Astro.props;
---

<!doctype html>
<html lang="en">
  <BaseHead {...baseHeadProps} />
  <body style={style}>
    <div class="fixed w-screen top-10 left-0 z-1 justify-center mr-auto flex">
      <!-- <Header links={headerLinks} /> -->
    </div>
    <main class:list={["min-h-screen flex relative", className]}>
      <slot />
    </main>
  </body>
</html>
